{% extends 'base.html.twig' %}

{% block title %}WG Suche{% endblock %}

{% block content %}
    <form style="margin-top: 100px; margin-bottom: 40px;" action="/login/user" method="post"
          class="form-horizontal">
        <fieldset>

            <!-- Form Name -->
            <legend>Loginformular</legend>

            <!-- Email -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Email</label>
                <div class="col-md-4">
                    <input id="textinput" name="email" type="email" value="" class="form-control input-md">
                </div>
            </div>

            <!-- Password -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Passwort</label>
                <div class="col-md-4">
                    <input id="textinput" name="password" type="password" value="" class="form-control input-md">
                </div>
            </div>

            <!-- Jetzt anmelden -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="singlebutton"></label>
                <div class="col-md-4">
                    <input type="submit" id="button1id" name="registration" class="btn btn-success"
                           value="Anmelden"/>
                </div>
            </div>

        </fieldset>
    </form>
{% endblock %}